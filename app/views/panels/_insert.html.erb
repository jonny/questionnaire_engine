<% route = { :question_sheet_id => @page.question_sheet_id, :page_id => @page.id } %>

<div id="panel-elements" class="panel">
<div style="float: right;"><a href="/questionnaire_engine/help/builder.html" class="lbOn help" id="link-builder-help" >?</a></div>
<% if controller.action_name == "show_panel" -%>
<script language="javascript" type="text/javascript">
	var valid = new lightbox($('link-builder-help'));
</script>
<% end -%>

  <p class="instruction">Click an element to add it to the end of 
  your page (you can drag and drop fields to reorder them later).</p>
     
  <ul id="list-elements" class="list-elements">
    <li id="sp"><%= link_to "Heading", admin_question_sheet_page_elements_path(route.merge(:element_type => "Section")), 
                      :remote => true,
                      :method => :post %></li>
    <li id="pa"><%= link_to "Paragraph", admin_question_sheet_page_elements_path(route.merge(:element_type => "Paragraph")), 
                      :remote => true, 
                      :method => :post %></li>
    <li id="sl"><%= link_to "Short Answer",  admin_question_sheet_page_elements_path(route.merge(:element_type => "TextField", 'element[style]' => 'short')), 
                      :remote => true,
                      :method => :post %></li>
    <li id="ml"><%= link_to "Long Answer", admin_question_sheet_page_elements_path(route.merge(:element_type => "TextField", 'element[style]' => 'essay')), 
                      :remote => true,
                      :method => :post %></li>
    <li id="co"><%= link_to "Choose One", admin_question_sheet_page_elements_path(route.merge(:element_type => "ChoiceField", 'element[style]' => 'radio')),
                      :remote => true,
                      :method => :post %></li>
    <li id="cm"><%= link_to "Choose Many", admin_question_sheet_page_elements_path(route.merge(:element_type => "ChoiceField", 'element[style]' => 'checkbox')), 
                      :remote => true, 
                      :method => :post %></li>
    <li id="dt"><%= link_to "Date",  admin_question_sheet_page_elements_path(route.merge(:element_type => "DateField")), 
                      :remote => true,
                      :method => :post %></li>
    <li id="qg"><%= link_to "Grid",  admin_question_sheet_page_elements_path(route.merge(:element_type => "QuestionGrid")), 
                      :remote => true,
                      :method => :post %></li>
    <li id="at"><%= link_to "Attachment", admin_question_sheet_page_elements_path(route.merge(:element_type => "AttachmentField")), 
                      :remote => true, 
                      :method => :post %></li>
    <li id="qgt"><%= link_to "Grid w/Total", admin_question_sheet_page_elements_path(route.merge(:element_type => "QuestionGridWithTotal")), 
                      :remote => true, 
                      :method => :post %></li>
  </ul>
  
  <p style="clear: both;">&nbsp;</p>
</div>

